{
	"name": "my-svelte-app",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "bun run build && wrangler pages dev",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"deploy": "bun run build && wrangler pages deploy",
		"cf-typegen": "wrangler types src/worker-configuration.d.ts",
		"auth:generate": "bun x @better-auth/cli generate --config src/lib/server/auth/better-auth.config.ts --output src/lib/server/db/schema/auth.schema.ts -y",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"d1:migrate": "wrangler d1 migrations apply PUSSADU_DB",
		"d1:migrate:remote": "wrangler d1 migrations apply PUSSADU_DB --remote",
		"storybook": "storybook dev -p 6006",
		"storybook:build": "storybook build",
		"storybook:new": "hygen component new",
		"storybook:add": "hygen component add"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^4.1.0",
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@lucide/svelte": "^0.539.0",
		"@storybook/addon-a11y": "^9.1.1",
		"@storybook/addon-docs": "^9.1.1",
		"@storybook/addon-svelte-csf": "^5.0.7",
		"@storybook/addon-vitest": "^9.1.1",
		"@storybook/sveltekit": "^9.1.1",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-cloudflare": "^7.1.2",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/vite": "^4.0.0",
		"@types/node": "^22",
		"@vitest/browser": "^3.2.4",
		"clsx": "^2.1.1",
		"drizzle-kit": "^0.30.2",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-storybook": "^9.1.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"lefthook": "^1.12.2",
		"playwright": "^1.54.2",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"storybook": "^9.1.1",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwind-variants": "^2.1.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4",
		"vite-plugin-devtools-json": "^0.2.0",
		"vitest": "^3.2.4",
		"wrangler": "^4.28.0"
	},
	"dependencies": {
		"7.css": "^0.21.1",
		"@fontsource-variable/anuphan": "^5.2.6",
		"@libsql/client": "^0.14.0",
		"@paralleldrive/cuid2": "^2.2.2",
		"better-auth": "^1.3.4",
		"bits-ui": "^2.9.1",
		"drizzle-orm": "^0.40.0",
		"hygen": "^6.2.11",
		"tailwind-merge": "^3.3.1",
		"tw-animate-css": "^1.3.6"
	},
	"trustedDependencies": [
		"@tailwindcss/oxide"
	]
}
